<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_karyawan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_itemKaryawan_cv"
        android:layout_marginLeft="@dimen/marginLeft_item_cv"
        android:layout_marginRight="@dimen/marginLeft_item_cv"
        android:layout_marginTop="@dimen/marginTop_item_cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/paddingList">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avaUser"
                android:layout_width="@dimen/avaList"
                android:layout_height="@dimen/avaList"
                android:layout_margin="@dimen/marginAvaList"
                android:scaleType="centerCrop"
                android:src="@drawable/jesica"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/namaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/avaUser"
                android:text="Jesica Hanwick Blablabalabl"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/jobUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaUser"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/avaUser"
                android:text="Android Developer"
                android:textColor="@color/colorSecondaryText"
                android:textSize="16sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>