<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_permintaan_cuti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:layout_width="@dimen/avaList"-->
            <!--android:layout_height="@dimen/avaList"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_margin="@dimen/marginAvaList"-->
            <!--android:src="@drawable/user" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cuti_namaKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Adam Dzulqarnain"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cuti_awalCuti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Januari 2018" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" s/d " />

                    <TextView
                        android:id="@+id/tv_cuti_akhirCuti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Januari 2018" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_cuti_keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Umroh" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_acc"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_success"
                android:text="@string/setuju"
                android:textColor="@color/colorGreen" />

            <Button
                android:id="@+id/btn_dec"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_danger"
                android:text="@string/tolak"
                android:textColor="@color/colorRedButton" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

