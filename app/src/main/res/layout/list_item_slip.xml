<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/marginLeft_item_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_namaUser_slip"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jesica Hanwick"/>
            <TextView
                android:id="@+id/tv_sesiGaji"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Januari Sesi 1"/>
            <Button
                android:id="@+id/btn_kirimSLip"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kirim Slip"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>